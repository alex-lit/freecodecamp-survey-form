.app-container {
  background-image: linear-gradient(
    90deg,
    var(--indigo--900),
    var(--indigo--300)
  );
  padding: 40px;
  color: #fff;
  min-height: 100vh;
}
.app-container__wrapper {
  max-width: 880px;
  width: calc(100vw - 40px);
  margin: 0 auto;
}
.app-container__header {
  text-align: center;
  margin-bottom: 40px;
}
.app-container__slot-wrap {
  position: relative;
}
